# Zapper ArgoCD GitOps - Environment Variables Template
# Copy this file to .env and customize the values

# ===================================
# ArgoCD Configuration
# ===================================
ARGOCD_NAMESPACE=argocd
ARGOCD_VERSION=stable

# ===================================
# PostgreSQL (CloudNativePG)
# ===================================
POSTGRES_NAMESPACE=cloudnative-pg
POSTGRES_INSTANCES=3
POSTGRES_STORAGE_SIZE=20Gi
POSTGRES_DATABASE=app_db
POSTGRES_USER=app_user
# Password will be auto-generated and stored in secret

# ===================================
# ClickHouse Configuration
# ===================================
CLICKHOUSE_NAMESPACE=clickhouse
CLICKHOUSE_SHARDS=2
CLICKHOUSE_REPLICAS=2
CLICKHOUSE_KEEPER_INSTANCES=3
CLICKHOUSE_STORAGE_SIZE=100Gi
CLICKHOUSE_USER=admin
CLICKHOUSE_PASSWORD=admin123

# ===================================
# PeerDB Configuration
# ===================================
PEERDB_NAMESPACE=peerdb
PEERDB_FLOW_WORKERS=2
PEERDB_FLOW_WORKER_MAX_REPLICAS=10

# ===================================
# Temporal Configuration
# ===================================
TEMPORAL_FRONTEND_REPLICAS=1
TEMPORAL_HISTORY_REPLICAS=1
TEMPORAL_MATCHING_REPLICAS=1
TEMPORAL_WORKER_REPLICAS=1

# ===================================
# Monitoring Configuration
# ===================================
MONITORING_NAMESPACE=monitoring
GRAFANA_ADMIN_PASSWORD=admin123
PROMETHEUS_RETENTION=30d
PROMETHEUS_STORAGE_SIZE=50Gi
GRAFANA_STORAGE_SIZE=10Gi

# ===================================
# Node Affinity Configuration
# ===================================
# Set to 'true' to enable node affinity
ENABLE_NODE_AFFINITY=true

# Worker node names for PostgreSQL
POSTGRES_WORKER_1=worker-1
POSTGRES_WORKER_2=worker-2

# Worker node name for ClickHouse
CLICKHOUSE_WORKER=worker-3

# Worker node names for PeerDB
PEERDB_WORKER_1=worker-4
PEERDB_WORKER_2=worker-5

# ===================================
# HPA Configuration
# ===================================
ENABLE_HPA=true
HPA_CPU_THRESHOLD=75
HPA_MEMORY_THRESHOLD=80

# ===================================
# Git Repository
# ===================================
GIT_REPO_URL=https://github.com/chalkan3/zapper-argocd.git
GIT_BRANCH=main

# ===================================
# Port Forwarding (Local Development)
# ===================================
ARGOCD_PORT=8080
PEERDB_PORT=3000
GRAFANA_PORT=3001
PROMETHEUS_PORT=9090
ALERTMANAGER_PORT=9093
CLICKHOUSE_NATIVE_PORT=9000
CLICKHOUSE_HTTP_PORT=8123
POSTGRES_PORT=5432
TEMPORAL_UI_PORT=8088
